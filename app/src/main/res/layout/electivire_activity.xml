<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Electivire">

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="1933dp"
        android:layout_height="640dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26999998"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/imageItemBox"
        android:layout_width="917dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/itembox" />

    <ImageView
        android:id="@+id/imageGameLayout"
        android:layout_width="714dp"
        android:layout_height="293dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageItemBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gamelayout" />

    <ImageView
        android:id="@+id/bulbx1"
        android:layout_width="259dp"
        android:layout_height="172dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="132dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageGameLayout"
        app:layout_constraintEnd_toEndOf="@+id/imageGameLayout"
        app:srcCompat="@drawable/bulb1" />

    <ImageView
        android:id="@+id/bulbx2"
        android:layout_width="257dp"
        android:layout_height="174dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="132dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageGameLayout"
        app:layout_constraintEnd_toEndOf="@+id/imageGameLayout"
        app:srcCompat="@drawable/bulb2" />

    <ImageView
        android:id="@+id/imageReset"
        android:layout_width="87dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:onClick="resetClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/check" />

    <ImageView
        android:id="@+id/imageReturn"
        android:onClick="returnClicked"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageHelp"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:onClick="helpClicked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/help"
        tools:layout_editor_absoluteX="652dp" />

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="173dp"
        android:layout_height="90dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="208dp"
        app:layout_constraintStart_toStartOf="@+id/imageGameLayout"
        app:layout_constraintTop_toTopOf="@+id/imageGameLayout"
        app:srcCompat="@drawable/holder" />

    <ImageView
        android:id="@+id/item1"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/transparantbox" />

    <ImageView
        android:id="@+id/item2"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item1"
        app:srcCompat="@drawable/transparantbox" />

    <ImageView
        android:id="@+id/item3"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item2"
        app:srcCompat="@drawable/transparantbox" />

    <ImageView
        android:id="@+id/item4"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item3"
        app:srcCompat="@drawable/transparantbox" />

    <ImageView
        android:id="@+id/item5"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item4"
        app:srcCompat="@drawable/transparantbox" />

    <ImageView
        android:id="@+id/imageBox"
        android:layout_width="89dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageGameLayout"
        app:layout_constraintEnd_toEndOf="@+id/imageGameLayout"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/imageGameLayout"
        app:layout_constraintTop_toTopOf="@+id/imageGameLayout"
        app:layout_constraintVertical_bias="0.82"
        android:clickable="true"
        android:onClick="explainClicked"
        app:srcCompat="@drawable/transparantbox" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="serif-monospace"
        android:text="Scores"
        android:textAlignment="center"
        android:textColor="#9E1946"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageHelp"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toEndOf="@+id/imageReturn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>