<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backgroundclose" />

    <ImageView
        android:id="@+id/background_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backgroundclose"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/deoxyMainMenuTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/fontColorPlanetTitleBackground"
        android:fontFamily="@font/amatica_sc_bold"
        android:gravity="center"
        android:text="- Deoxys -"
        android:textColor="#fff"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

    <Button
        android:id="@+id/btnSelectPlanetarium"
        android:layout_width="180dp"
        android:layout_height="62dp"
        android:background="@color/fontColorPlanetTitleBackground"
        android:fontFamily="@font/amatica_sc_bold"
        android:gravity="center"
        android:text="Planetarium"
        android:textColor="@color/fontColorPlanetTitle"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deoxyMainMenuTitle"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/btnSelectTriviaQuest"
        android:layout_width="180dp"
        android:layout_height="62dp"
        android:background="@color/fontColorPlanetTitleBackground"
        android:fontFamily="@font/amatica_sc_bold"
        android:gravity="center"
        android:text="Trivia Quest"
        android:textColor="@color/fontColorPlanetTitle"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectPlanetarium"
        app:layout_constraintVertical_bias="0.109" />

</androidx.constraintlayout.widget.ConstraintLayout>
